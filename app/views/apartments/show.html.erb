<% title "Wohnungsbörse" + @apartment.title %>

<!-- facebook send button -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/de_DE/all.js#xfbml=1";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));
</script>

<div id="article_head">
	<div>
		<h1><% if @apartment.is_offer == false %>Suche:<% else %>Biete:<% end %> <%= @apartment.title %></h1>
	</div>
	<div>
		<div class="fb-send" data-href="http://fhboerse.mediacube.at/apartments/<%= @apartment.id %>" data-font="trebuchet ms"></div>
	</div>
	<div>
		<a href="https://twitter.com/share" class="twitter-share-button" data-url="http://fhboerse.mediacube.at/apartments/<%= @apartment.id %>" data-lang="de" data-count="none" data-hashtags="fhbörse">Twittern</a>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
	</div>
</div>

<div class="article_list">
	<table class="table_fix_width">
		<tr>
			<td>
				<div id="is_offer_option">
					<span class="info_headline">Immobilie</span> soll
					<%= @apartment.leasebuyrent %> werden
				</div>
			</td>
		</tr>
		<tr>
			<td class="info_headline">Titel:</td>
		</tr>
		<tr>
			<td><%= @apartment.title %><td>
		</tr>
	</table>
	<table>
		<tr>
			<td class="info_headline">Beschreibung:</td>
		</tr>
		<tr>
			<td><%= @apartment.description %></td>
		</tr>
	</table>
	<table>
		<tr>
			<td colspan="2" class="info_headline">Größe:</td>
			<td><%= @apartment.size %> m²</td>
		</tr>
		<tr>
			<td colspan="2" class="info_headline">Anzahl der Räume:</td>
			<td><%= @apartment.amount_of_rooms %></td>
		</tr>
	</table>
	<table>
		<tr>
			<td colspan="2" class="info_headline">Verfügbarkeit</td>
		</tr>
		<tr>
			<td>Verfügbar ab:</td>
			<td><%= @apartment.begin_availability.strftime('%d.%m.%Y') %></td>
		</tr>
		<% if @apartment.end_availability %>
		<tr>
			<td>Verfügbar bis:</td>
			<td><%= @apartment.end_availability.strftime('%d.%m.%Y') %></td>
		</tr>
		<% end %>
	</table>	
	<table>
		<tr>
			<td colspan="2" class="info_headline">Ausstattung</td>
		</tr>
		<tr>
			<td>Küche:</td>
			<td>
				<% if @apartment.kitchen %>
				<%= "Ja" %>
				<% else %>
				<%= "Nein" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>Möbelierung:</td>
			<td>
				<% if @apartment.furniture %>
				<%= "Ja" %>
				<% else %>
				<%= "Nein" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>Balkon:</td>
			<td>
				<% if @apartment.balcony %>
				<%= "Ja" %>
				<% else %>
				<%= "Nein" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>Terrasse:</td>
			<td>
				<% if @apartment.terrace %>
				<%= "Ja" %>
				<% else %>
				<%= "Nein" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>Garten:</td>
			<td>
				<% if @apartment.garden %>
				<%= "Ja" %>
				<% else %>
				<%= "Nein" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>Parkplatz:</td>
			<td>
				<% if @apartment.lot %>
				<%= "Ja" %>
				<% else %>
				<%= "Nein" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>Garage:</td>
			<td>
				<% if @apartment.garage %>
				<%= "Ja" %>
				<% else %>
				<%= "Nein" %>
				<% end %>
			</td>
		</tr>
	<table>
		<tr>
			<td colspan="2" class="info_headline">Öffentliche Verkehrsanbindung:</td>
			<td><%= @apartment.transport_connection %></td>
		</tr>
	</table>	
	<table>
		<tr>
			<td colspan="2" class="info_headline">Kosten</td>
		</tr>
		<tr>
			<td>Preis:</td>
			<td>
				<%= @apartment.price %> €	
			</td>
		</tr>
		<% if @apartment.leasebuyrent == "vermietet"%>
		<tr>
			<td>Warm- oder Kaltmiete:</span></td>
			<td>
				<% if @apartment.priceType %>
				<%= "Warm" %>
				<% else %>
				<%= "Kalt" %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</table>	
	<table>
		<tr>
			<td colspan="2" class="info_headline">Adresse</td>
		</tr>
		<tr>
			<td>Straße und Hausnummer:</td>
			<td><%= @apartment.street %></td>
		</tr>
		<tr>
			<td>Postleitzahl:</td>
			<td><%= @apartment.zip_code %></td>
		</tr>
		<tr>
			<td>Stadt:</td>
			<td><%= @apartment.city %></td>
		</tr>
		<tr>
			<td>Land</td>
			<td><%= @apartment.country %></td>
		</tr>
	</table>
	<% if @apartment.photo.file? %>
	<table>
		<tr>
			<td colspan="2" class="info_headline">Galerie</td>
		</tr>
		<tr>
			<td>
				<%= link_to image_tag(@apartment.photo.url(:small)), @apartment.photo.url(:original) %>
			</td>
			<% if @apartment.photo_two.file? %>
				<td>
					<%= link_to image_tag(@apartment.photo_two.url(:small)), @apartment.photo_two.url(:original) %>
				</td>
			<% end %>
			<% if @apartment.photo_three.file? %>
				<td>
					<%= link_to image_tag(@apartment.photo_three.url(:small)), @apartment.photo_three.url(:original) %>
				</td>
			<% end %>
		</tr>
	</table>	
	<% end %>
	<table>
		<tr>
			<td colspan="2" class="info_headline">Ansprechpartner</td>
		</tr>
		<tr>
			<td><% if @apartment.firstname? %>Vorname:<% end %></td> 
			<td><% if @apartment.firstname? %><%= @apartment.firstname %><% end %></td>
		</tr>
		<tr>
			<td>Nachname:</td> 
			<td><%= @apartment.lastname %></td>
		</tr>
		<tr>
			<td>E-Mail:</td> 
			<td><%= @apartment.email %></td>
		</tr>
		<tr>
			<td>Telefon:</td> 
			<td><%= @apartment.telephone %></td>
		</tr>
	</table>
	<% if current_user and current_user.id == @apartment.user_id %>
	<table>
		<tr>
			<td colspan="2" class="info_headline">Anzeige löschen</td>
		</tr>
		<tr>
			<td><%= button_to "Anzeige löschen", {:action => "destroy"}, :confirm => "Sind Sie sicher?", :method => :delete %></td> 
		</tr>
	</table>
	<% end %>
</div>

<div class="back_to_overview"><%= link_to "Alle Anzeigen", apartments_path %></div>
