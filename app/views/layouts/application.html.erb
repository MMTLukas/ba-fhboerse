<!DOCTYPE html>
<html lang="de">
	
<head>    
	<meta charset="utf-8" />
	
	<title>FH-Börse - <%=h yield(:title) %></title>

	<meta name="description" lang="de" content="" />
	<meta name="keywords" lang="de" content="" />
	<meta name="robots" content="index, follow" />
	<!--<%= stylesheet_link_tag "application.css" %>-->
	<%= javascript_include_tag "application" %>
	<%= javascript_include_tag "https://browserid.org/include.js" %>
	<%= javascript_include_tag "browserid" %>
	<%= csrf_meta_tags %>
	<!--<%= controller_stylesheet %>-->
	<%= stylesheet_link_tag "application" %>
</head>

<body>
	<div id="mainWrapper">
		<div id="logo"><a href="/" title="Startseite"></a></div>
		<% if current_user %>
		<div class="button"><%= link_to "Abmelden", signout_path %></div>
		<div class="button"><%= link_to "Profil", profile_path %></div>
		<div id='userbar'>
			<% if current_user.complete %>
			Willkommen, <strong><%= current_user.forename %> <%= current_user.lastname %>!</strong>
			<% else %>
			Bitte vervollständigen Sie Ihr Profil!
			<% end %>
		</div>
		<% else %>
		<div class="button"><%= link_to "Google", "/auth/google" %></div>
		<div class="button"><%= link_to "LDAP", "/auth/ldap" %></div>
		<div class="button"><%= link_to "Twitter", "/auth/twitter" %></div>
		<div class="button"><%= link_to "Facebook", "/auth/facebook" %></div>
		<form id='browser_id' class="button" action='/auth/browser_id/callback'>
		  <input type='hidden' name='assertion'/>
		  <button type='submit'>BrowserID</button>
		</form>
		<div id='userbar'>Anmelden mit: </div>
		<% end %>
		<ul id="navigation">
			<li><%= link_to "Startseite", "/", :class => is_active?("home") %></li>
			<li><%= link_to "Jobbörse", "/jobs", :class => is_active?("jobs") %></li>
			<li><%= link_to "Mitfahrgemeinschaft", "/drives", :class => is_active?("drives") %></li>
			<li><%= link_to "Marktplatz", "/products", :class => is_active?("products") %></li>
			<li><%= link_to "Wohnungsbörse", "/apartments", :class => is_active?("apartments") %></li>
			<li><%= link_to "Fundgrube", "/items", :class => is_active?("items") %></li>
		</ul>
		<% if @breadcrumbs %>
			<ul id="breadcrumbs">
				<li><%= link_to "", "/" %></li>
				<% @breadcrumbs.each do |txt, path| %>
					<li><%= link_to(h(txt), path) %></li>
				<% end %>
			</ul>
		<% end %>
		<div id="mainContainer">
			<% if flash[:notice] %><div id="notice" class="container"><%= notice %></div><% end %>
			<div class="container">
				<%= yield %>
			</div>
			<div id="footer">
				&copy; 2012 | <%= link_to "AGB", "/pages/agb" %> | <%= link_to "Kontakt", "/pages/contact" %> | <%= link_to "Impressum", "/pages/about" %>
			</div>
		</div>
		<div id="sidebar">
			<div class="container">
				<div class="containerHead">Neuste Artikel</div>
				<% @newest_articles.each do |article| %>
					<div class='listItem'>
						<a href="<%= url_for(article) %>">
							<% if article.offer_or_quest == false %>
								Suche:
							<% else %>
								Biete:
							<% end %>
							<span class='subject'><%= truncate(article.title, :length => 50) %></span><br/>
							<%= article.user.title%> <%= truncate(article.user.lastname, :length => 30) %> am
							<%= article.created_at.strftime("%d.%m.%Y, %H.%Mh") %>
						</a>
					</div>
				<% end %>
			</div>
			<div class="container">
				<div class="containerHead">Beliebteste Artikel</div>
				<% @most_popular_articles.each do |article| %>
					<div class='listItem'>
						<a href="<%= url_for(article) %>">
							<% if article.offer_or_quest == false %>
								Suche:
							<% else %>
								Biete:
							<% end %>
							<span class='subject'><%= truncate(article.title, :length => 50) %></span><br/>
							<%= article.user.title%> <%= truncate(article.user.lastname, :length => 30) %> am
							<%= article.created_at.strftime("%d.%m.%Y, %H.%Mh") %>
						</a>
					</div>
				<% end %>
			</div>
		</div>
	</div>

</body>
</html>