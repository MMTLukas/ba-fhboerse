<div id="articles_list" class="articles_list">
	<ul>
		<% @drives.each do |drive| %>
			<a href="<%= url_for(drive) %>">
				<li class="offer_or_quest_<%= drive.offer_or_quest%>">
					<div class="title">
						<span>
							<% if drive.offer_or_quest == false %>
								Suche:
							<% else %>
								Fahre:
							<% end %>
						</span>
						<%= truncate(drive.title, :length => 60) %>
					</div>
					<div>
						<%= truncate(drive.description, :length => 160) %>
					</div>
					<div>
						<%= drive.user.title%> <%= truncate(drive.user.lastname, :length => 60) %> am
						<%= drive.created_at.strftime("%d.%m.%Y, %H:%M") %>
					</div>
				</li>
			</a>
		<% end %>
	</ul>
</div>

