<div id="articles_list" class="articles_list">
	<ul>
		<% @products.each do |product| %>
			<a href="<%= url_for(product) %>">
				<li class="isOffer_<%= product.isOffer%> product">
					<div class="title">
						<span>
							<% if product.isOffer == false %>
								Suche:
							<% else %>
								Biete:
							<% end %>
						</span>
						<%= truncate(product.title, :length => 60) %>
					</div>
					<div>
						<%= truncate(product.description, :length => 160) %>
					</div>
					<div>
						<%= product.user.title%> <%= truncate(product.user.lastname, :length => 60) %> am
						<%= product.created_at.strftime("%d.%m.%Y, %H:%M") %>
					</div>
				</li>
			</a>
		<% end %>
	</ul>
</div>

