<% content_for :title, "Jobbörse" %>
<% javascript_include_tag "jquery.ba-url.min", "pagination" %>

<div class="subcategorie_head">
	<div>
		Alle Jobs
	</div>
	<div>
		Ansicht:
		<input type="checkbox" value="offer" checked="checked" id="show_offers">
		<label for="show_offers">Angebot</label>
		<input type="checkbox" value="show_quests" checked="checked">
		<label for="show_quests">Suche</label>
	</div>
	<div>
		<a href="<%= new_job_path %>">
			<div></div>
			<%= link_to 'Anzeige hinzufügen', new_job_path %>
		</a>
	</div>
</div>

<div id="jobs">
	<%= render :partial => 'jobs' %>
</div>
